---
import Navbar from "../components/Navbar";
import {Footer} from "../components/Footer";
import AppWrapper from "../Widgets/Wrappers/AppWrapper.vue"
import ContentWrapper from "../Widgets/Wrappers/ContentWrapper.svelte";
export interface Props {
	title?: string;
	customFont?: string
}
const url = Astro.url
const { title = "dehwyy", customFont } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.jpg" />
		{customFont && <link rel="stylesheet" href={customFont}>}
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body style="margin: 0; padding: 0">
	<AppWrapper>
		<Navbar currentPage={url.pathname} client:load="true"/>
		<ContentWrapper>
			<slot />
		</ContentWrapper>
		<Footer />
	</AppWrapper>
	</body>

</html>
<style is:global>
@font-face {
	font-family: 'bartkey';
	src: url("/fonts/BARTKEY.ttf") format('truetype');
}
@font-face {
	font-family: 'neuro';
	src: url("/fonts/neuro.otf") format('truetype');
}
@font-face {
	font-family: 'zekton';
	src: url("/fonts/zekton.otf") format('truetype');
}
@font-face {
	font-family: 'generis';
	src: url("/fonts/generis.otf") format('truetype');
}
body {
	background: #333333;
}
a {
	text-decoration: none;
	color: inherit;
}
.cut-left-top-small {
	clip-path: polygon(25% 0%, 100% 0, 100% 50%, 100% 100%, 0 100%, 0 35%);
}
.cut-right-bottom-small {
	clip-path: polygon(100% 0, 100% 85%, 95% 100%, 0 100%, 0 0);
}
.cut-right-bottom-big {
	clip-path: polygon(100% 0, 100% 90%, 95% 100%, 0 100%, 0 0);
}
</style>